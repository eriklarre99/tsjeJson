<!-- Llamar a cabecera -->
<%- include('./partials/header') -%>


   <!-- Titulo -->
   <div class="d-sm-flex align-items-center justify-content-between mb-3">
    <h1 class="h5 font-weight-bold text-uppercase text-gray-450">Control Movil</h1>
    <p>Manejo Interno</p>
</div>

<!-- CONTENIDO DEL FORMULARIO Y LA TABLA -->
<div class="row justify-content-center ">
    <div class="col-xl-11  col-lg-12 col-md-9">
        <!--  configurar anchor de la pagina col-xl-11-->
        <div class="card o-hidden border-0 shadow-lg ">
            <div class="row ">
                <div class="col-lg-5">
                    <div class="p-4">
                        <h3 id="titleUser">Nuevo +</h3>
                        <!-- FORMULARIO USUARIO -->
                        <form class="operador user" id="" method="post" action="/newOperador">

                            <br><br>

                            <div class="form-group">
                                <input type="text" class="form-control form-control-user" name="propietario" 
                                id="operador" placeholder="Propietario" required>
                            </div>

                            <div class="form-group">
                                <input type="number" class="form-control form-control-user" name="monto" 
                                id="celular" placeholder="monto" required>
                            </div>
                            
                            <div class="form-group">
                                <input type="text" class="form-control form-control-user" name="celular" 
                                id="celular" placeholder="Nº Celular" required>
                            </div>

                            <br><br>
                            
                            <div class="form-group text-right">
                                <button type="submit"    class="btn btn-primary " id="btnActualizar">Guardar</button>
                                <button type="reset"     class="btn btn-danger " id="btnLimpiar">Limpiar</button>
                            </div>
                        </form>
                    </div>
                </div>
                <!-- TABLA DE LOS INSUMOS -->
                <div class="col-lg-7">
                    <div class="p-5">
                        <h3>Listado Operador</h3>
                        <table id="tablaUsers" class="table table-sprited table-hover table-bordered">

                            <tr>
                                <th>Operador</th>
                                <th>Celular</th>
                                <th>Nº Personas</th>
                                <th>Acciones</th>
                            </tr>

                            <tbody id="tbody">

                                <% file.forEach(function(item) { %>
                                    <tr>
                                        <td> <%= item.operador %>  </td>
                                        <td> <%= item.celular %>  </td>
                                        <td> en desarrollo...  </td>
                                        <td> 
                                            <h4 class="text-center ">

                                                <form action="/deleteOperador" method="post" id="deleteOperador" style="padding: 0; margin: 0;">
                                                    <input type="hidden" name="id_operador" value="<%= item.id %>">
                                                    <button type="submit" style="border:none; background: transparent">
                                                        <i  class="fas fa-minus-circle text-danger"  role="button"></i>
                                                    </button>
                                                </form>
                                            
                                                <!-- <i class="fas fa-user-edit text-success"  role="button"></i> -->
                                            </h4>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>

                            <div id=""> </div>

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




<!-- Llamar footer -->
<%- include('./partials/footer') -%>